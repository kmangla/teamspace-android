<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity$PlaceholderFragment">

        <Button
            android:id="@+id/view_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:text="@string/view_logs"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/self_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/view_logs"
            android:background="@android:color/holo_blue_light"
            android:text="@string/change_number"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/self_number"
            android:layout_marginTop="20dp"
            android:text="@string/test"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:layout_marginTop="20dp"
            android:hint="@string/message" />

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:layout_marginTop="20dp"
            android:hint="@string/number" />

        <Button
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_blue_light"
            android:text="@string/send"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/send_to_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_blue_light"
            android:text="@string/send_to_server"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_to_server"
            android:layout_marginTop="50dp"
            android:text="@string/server"
            android:textColor="@android:color/holo_blue_light" />

        <EditText
            android:id="@+id/server_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/server"
            android:layout_marginTop="20dp"
            android:hint="10.0.0.4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/server_edit_text"
            android:layout_marginTop="50dp"
            android:text="@string/port"
            android:textColor="@android:color/holo_blue_light" />

        <EditText
            android:id="@+id/port_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/port"
            android:layout_marginTop="20dp"
            android:hint="Enter 0 for no port"
            android:textSize="16sp" />

        <Button
            android:id="@+id/save_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/port_edit_text"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_blue_light"
            android:text="@string/save_server"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/regID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/save_server"
            android:layout_marginTop="50dp"
            android:text="@string/reg_id"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/regIDText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regID"
            android:layout_marginTop="20dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regIDText"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_blue_light"
            android:text="@string/copy"
            android:textColor="@android:color/white" />


    </RelativeLayout>
</ScrollView>