            android:entries="@array/colors"
            android:entryValues="@array/colors"
            android:key="pref_employee_background_color"
            android:title="@string/background_color_title" />
        <ListPreference
            android:defaultValue="@string/default_text_color"
            android:dialogTitle="@string/text_color"
            android:entries="@array/colors"
            android:entryValues="@array/colors"
            android:key="pref_employee_text_color"
            android:title="@string/text_color_title" />
    </PreferenceCategory>
