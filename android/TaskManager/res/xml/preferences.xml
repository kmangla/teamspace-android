<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="pref_key_default_tab_category"
        android:title="@string/default_tab" >
        <ListPreference
            android:defaultValue="@string/tabs_default_value"
            android:dialogTitle="@string/choose_default_tab"
            android:entries="@array/tabs"
            android:entryValues="@array/tabs"
            android:key="pref_key_default_tab"
            android:title="@string/choose_default_tab" />
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="pref_key_sync_settings"
        android:title="@string/pref_sync_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_sync"
            android:summary="@string/pref_sync_summary"
            android:title="@string/pref_sync" />

        <ListPreference
            android:defaultValue="@string/frequency_default"
            android:dependency="pref_sync"
            android:dialogTitle="@string/pref_sync_dialog"
            android:entries="@array/frequency"
            android:entryValues="@array/frequency"
            android:key="pref_syncFrequency"
            android:title="@string/pref_sync_freq" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_employee_color_settings"
        android:title="@string/employee_tab_color" >
        <ListPreference
            android:defaultValue="@string/default_background_color"
