    <PreferenceCategory
        android:key="pref_key_chat_color_settings"
        android:title="@string/chat_tab_color" >
        <ListPreference
            android:defaultValue="@string/default_background_color"
            android:dialogTitle="@string/background_color"
            android:entries="@array/colors"
            android:entryValues="@array/colors"
            android:key="pref_chat_sender_background_color"
            android:title="@string/chat_sender_background_color_title" />
        <ListPreference
            android:defaultValue="@string/default_text_color"
            android:dialogTitle="@string/text_color"
            android:entries="@array/colors"
            android:entryValues="@array/colors"
            android:key="pref_chat_sender_text_color"
